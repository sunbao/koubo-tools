/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}

/* 全局样式 */
.page-container {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #007AFF;
  color: white;
  border-radius: 10rpx;
  text-align: center;
  font-size: 32rpx;
  margin: 20rpx 0;
}

.btn:active {
  background-color: #0062CC;
}

.btn-disabled {
  background-color: #CCCCCC;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #E5E5E5;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 10rpx 0;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #E5E5E5;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 10rpx 0;
  box-sizing: border-box;
}

.card {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.loading {
  text-align: center;
  padding: 30rpx 0;
  color: #999999;
}

.error {
  text-align: center;
  padding: 30rpx 0;
  color: #FF3B30;
}